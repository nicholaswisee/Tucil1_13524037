<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Priority?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="queens.controller.MainController">
    
    <left>
        <VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-background-color: #f5f5f5;" 
              minWidth="400.0" prefWidth="600.0">
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>
            
            <Label text="LinkedIn Queens Minigame" 
                   style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-alignment: center;"/>

            <Label text="Brute-Force Solver" 
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-alignment: center;"/>
            
            <Label fx:id="fileLabel" text="No file selected" 
                   style="-fx-font-size: 14px; -fx-padding: 10px;" wrapText="true"/>
            
            <Button fx:id="selectFileButton" text="Select Input File" 
                    onAction="#handleSelectFile" maxWidth="Infinity"
                    style="-fx-font-size: 14px; -fx-padding: 10px 20px;"/>
            
            <Button fx:id="solveButton" text="Solve Puzzle" 
                    onAction="#handleSolve" disable="true" maxWidth="Infinity"
                    style="-fx-font-size: 14px; -fx-padding: 10px 20px;"/>
            
            <HBox spacing="10.0">
                <Button fx:id="exportTxtButton" text="Export .txt"
                        onAction="#handleExportTxt" disable="true"
                        maxWidth="Infinity" HBox.hgrow="ALWAYS"
                        style="-fx-font-size: 13px; -fx-padding: 10px 8px;"/>
                <Button fx:id="exportImgButton" text="Export Image"
                        onAction="#handleExportImage" disable="true"
                        maxWidth="Infinity" HBox.hgrow="ALWAYS"
                        style="-fx-font-size: 13px; -fx-padding: 10px 8px;"/>
            </HBox>
            
            <Separator prefWidth="200"/>
            
            <VBox alignment="TOP_LEFT" spacing="10.0">
                <Label text="Statistics" 
                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                
                <!-- Iterations -->
                <HBox spacing="10.0">
                    <Label text="Iterations:" 
                           style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <Label fx:id="iterationsLabel" text="0" 
                           style="-fx-font-size: 14px;"/>
                </HBox>
                
                <!-- Timer -->
                <HBox spacing="10.0">
                    <Label text="Time:" 
                           style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <Label fx:id="timerLabel" text="0 ms" 
                           style="-fx-font-size: 14px;"/>
                </HBox>
            </VBox>
        </VBox>
    </left>
    
    <center>
        <ScrollPane fx:id="boardScrollPane" pannable="true" 
                    style="-fx-background-color: white;"
                    hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED"
                    fitToWidth="true" fitToHeight="true">
            <!-- BoardCanvas placeholder-->
        </ScrollPane>
    </center>
    
</BorderPane>
